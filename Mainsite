<body>
    <h1>Fragen-Quiz</h1>

    <div id="quiz-container" class="quiz-container">
        <!-- Hier werden die Fragen dynamisch hinzugefügt -->
    </div>

    <script>
        // Passwortabfrage
        const correctPassword = "WaschbärPenis123";
        const userPassword = prompt("Bitte geben Sie das Passwort ein:");

        if (userPassword !== correctPassword) {
            alert("Falsches Passwort! Zugriff verweigert.");
            document.body.innerHTML = '';  // Den Inhalt der Seite entfernen, wenn das Passwort falsch ist
        } else {
            // Fragen und Überschriften
            const questions = [
                { header: "Schonzeit für Rehwild", question: "Wann beginnt die Schonzeit für Rehwild?", answer: "1. Mai - 30. Juni" },
                { header: "Kaliber für Rehwild", question: "Welches Kaliber ist für Rehwild zugelassen?", answer: "ab .222 Remington" },
                { header: "Mindestenergie für Rehwild", question: "Was ist die Mindestenergie für Rehwild?", answer: "1000 Joule" },
                // Weitere Fragen hier hinzufügen
            ];

            // Funktion zum Erstellen der Fragen
            function createQuestionItem(header, question) {
                const questionItem = document.createElement("div");
                questionItem.classList.add("question-item");

                // Überschrift hinzufügen
                const questionHeader = document.createElement("div");
                questionHeader.classList.add("question-header");
                questionHeader.innerText = header;
                questionItem.appendChild(questionHeader);

                // Frage hinzufügen
                const questionText = document.createElement("div");
                questionText.innerText = question;
                questionItem.appendChild(questionText);

                // Buttons für Richtig und Falsch
                const buttonContainer = document.createElement("div");
                buttonContainer.classList.add("button-container");

                const buttonCorrect = document.createElement("button");
                buttonCorrect.classList.add("button");
                buttonCorrect.innerText = "Richtig";
                buttonCorrect.onclick = () => {
                    alert("Richtig!");
                };

                const buttonWrong = document.createElement("button");
                buttonWrong.classList.add("button");
                buttonWrong.innerText = "Falsch";
                buttonWrong.onclick = () => {
                    alert("Falsch!");
                };

                buttonContainer.appendChild(buttonCorrect);
                buttonContainer.appendChild(buttonWrong);
                questionItem.appendChild(buttonContainer);

                return questionItem;
            }

            // Funktion, um das Array zufällig zu mischen
            function shuffleQuestions(arr) {
                for (let i = arr.length - 1; i > 0; i--) {
                    const j = Math.floor(Math.random() * (i + 1));
                    [arr[i], arr[j]] = [arr[j], arr[i]]; // Elemente vertauschen
                }
                return arr;
            }

            // Dynamisch Fragen hinzufügen (in zufälliger Reihenfolge)
            const quizContainer = document.getElementById("quiz-container");
            const shuffledQuestions = shuffleQuestions(questions); // Fragen mischen
            shuffledQuestions.forEach(q => {
                const questionItem = createQuestionItem(q.header, q.question);
                quizContainer.appendChild(questionItem);
            });
        }
    </script>
</body>
</html>
